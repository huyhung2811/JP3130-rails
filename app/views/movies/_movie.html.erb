<div id="<%= dom_id movie %>" class="mt-8">

  <p class="my-5">
    <strong class="block font-medium mb-1">タイトル:</strong>
    <%= movie.title %>
  </p>


  <% if movie.cover_image.attached? %>
    <%= image_tag(movie.cover_image, style: 'width:200px;height:300px;') %>
  <% else %>
    <%= image_tag('/avatar.png', style: 'width:200px;height:300px;') %>
  <% end %>

  <p class="my-5">
    <strong class="block font-medium mb-1">簡単な説明:</strong>
    <%= movie.short_description %>
  </p>


  <p class="my-5">
    <strong class="block font-medium mb-1">予告編:</strong>
    <iframe width="560" height="315" src="<%= movie.trailer_url %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">ストーリー:</strong>
    <%= movie.storyline %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">発売日:</strong>
    <%= movie.release_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">言語:</strong>
    <%= movie.languages %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">原産国:</strong>
    <%= movie.country_of_origin %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">制作会社:</strong>
    <%= movie.production_companies %>
  </p>

  <div class="my-5 flex flex-row">
    <strong class="block font-medium mb-1">カテゴリー :</strong>
    <% movie.categories.each do |category| %>
      <%= link_to "#{category.text}", "/movies?category=#{category.id}", class: "px-2 py-1 rounded-lg bg-blue-300 mx-1 hover:bg-blue-400" %>
    <% end %>
  </div>
  <div class="my-5 flex flex-row">
    <strong class="block font-medium mb-1">俳優 :</strong>
    <% movie.actors.each do |actor| %>
      <%= link_to "#{actor.name}", "/actors/#{actor.id}", class: "px-2 py-1 rounded-lg bg-blue-300 mx-1 hover:bg-blue-400" %>
    <% end %>
  </div>
  <% if action_name != "show" %>
    <%= link_to "見せる", movie, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to '編集', edit_movie_path(movie), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
